{
	"name": "smui-example-sveltekit",
	"version": "0.0.1",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "rm -rf build && svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"prepare": "npm run smui-theme-light && npm run smui-theme-dark",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark",
		"deploy": "npx gh-pages -d build -t true -u 'Martin Kromsten <kromsten@pm.me>'"
	},
	"devDependencies": {
		"@material/theme": "^13.0.0",
		"@material/typography": "^13.0.0",
		"@mdi/js": "^6.5.95",
		"@smui/button": "^6.0.0-beta.3",
		"@smui/card": "^6.0.0-beta.4",
		"@smui/drawer": "^6.0.0-beta.5",
		"@smui/icon-button": "^6.0.0-beta.3",
		"@smui/layout-grid": "^6.0.0-beta.4",
		"@smui/list": "^6.0.0-beta.6",
		"@smui/top-app-bar": "^6.0.0-beta.3",
		"@sveltejs/adapter-static": "^1.0.0-next.21",
		"@sveltejs/kit": "^1.0.0-next.198",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"eslint": "^8.3.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"gh-pages": "^3.2.3",
		"prettier": "~2.4.1",
		"prettier-plugin-svelte": "^2.5.0",
		"smui-theme": "^5.0.0",
		"svelte": "^3.44.2",
		"svelte-check": "^2.2.10",
		"svelte-loading-spinners": "^0.1.7",
		"svelte-preprocess": "^4.9.8",
		"svelthree": "^0.119.0-5",
		"tslib": "^2.3.1",
		"typescript": "^4.5.2"
	},
	"type": "module",
	"dependencies": {
		"@material/elevation": "^13.0.0",
		"@rodneylab/svelte-social-icons": "^0.0.16",
		"@smui/dialog": "^6.0.0-beta.4",
		"@smui/image-list": "^6.0.0-beta.4",
		"@smui/paper": "^6.0.0-beta.4",
		"aos": "^3.0.0-beta.6",
		"browser-crypto": "^1.4.0",
		"buffer": "^5.4.3",
		"Buffer": "^0.0.0",
		"dotenv": "^10.0.0",
		"secretjs": "^0.17.5",
		"svelte-kit": "^1.0.0",
		"three": "^0.135.0"
	}
}
